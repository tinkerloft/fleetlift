FROM ubuntu:24.04

ARG DEBIAN_FRONTEND=noninteractive

# Install base tools
RUN apt-get update && apt-get install -y \
    git curl wget sudo ca-certificates gnupg \
    ripgrep fd-find jq tree htop \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20 LTS
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3.12 (default on Ubuntu 24.04)
RUN apt-get update && apt-get install -y \
    python3 python3-venv python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Java 21 (optional - comment out if not needed)
RUN apt-get update && apt-get install -y openjdk-21-jdk maven \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI
RUN npm install -g @anthropic-ai/claude-code

# Create non-root user for security (C3 fix: restricted sudo commands)
RUN useradd -m -s /bin/bash agent \
    && echo "agent ALL=(ALL) NOPASSWD: /usr/bin/apt-get, /usr/bin/apt, /usr/bin/npm, /usr/bin/pip3" >> /etc/sudoers

# Create workspace and fleetlift protocol directories
RUN mkdir -p /workspace /output /workspace/.fleetlift \
    && chown -R agent:agent /workspace /output

# Copy the sidecar agent binary (built externally with: make fleetlift-agent)
COPY --chown=agent:agent fleetlift-agent /usr/local/bin/fleetlift-agent
RUN chmod +x /usr/local/bin/fleetlift-agent

# Switch to non-root user
USER agent
WORKDIR /workspace

# Environment variables (will be overridden at runtime)
ENV HOME=/home/agent
ENV ANTHROPIC_API_KEY=""
ENV GITHUB_TOKEN=""

# Default command - run the sidecar agent
CMD ["fleetlift-agent", "serve"]
